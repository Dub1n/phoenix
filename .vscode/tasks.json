{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Activate Terminal Safety",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/scripts/cursor-terminal-init.ps1"
            ],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": [],
            "detail": "Automatically activate terminal safety when workspace opens"
        },
        {
            "label": "Replace Emojis in Current File",
            "type": "shell",
            "command": "python",
            "args": [
                ".vscode/scripts/emoji_substitute.py",
                "--verbose",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Replace emojis with monospace-friendly Unicode characters in the currently active file"
        },
        {
            "label": "Preview Emoji Replacements (Dry Run)",
            "type": "shell",
            "command": "python",
            "args": [
                ".vscode/scripts/emoji_substitute.py",
                "--dry-run",
                "--verbose",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Preview what emoji replacements would be made in the currently active file"
        }
    ]
} 